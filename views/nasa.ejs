<%- include('header'); -%>
<%- include('homebanner'); -%>
<%- include('banner'); -%>

<% for(var i=0; i < data.items.length; i++) { %>
   <div id="nasaRSS-item<%= i %>" style="display:none;">
   <h2><%- data.items[i].title %></h2>
   <%- data.items[i]["content"] %><button class="bi<%= i %>">more</button>
   <br>
   <a href="<%- data.items[i].link %>"><%- data.items[i].link %></a>
   </div>

   <div id="nasaRSS-content<%= i %>" style="display:none;">
   <h2><%- data.items[i].title %></h2>
   <%- data.items[i]["content:encoded"] %><button class="ci<%= i %>">less</button>
   <br>
   <a href="<%- data.items[i].link %>"><%- data.items[i].link %></a>
   </div>
<% } %>

    <div id="maindisplay">
    <h1><%= data.title %></h1>
    </div>
<script>
$(document).ready(function() {
    for(let i = 0; i < <%= data.items.length %>; i++) {
        $("<div></div>")
	    .addClass("NASA"+i)
	    .appendTo("#maindisplay")
	    .html($("#nasaRSS-item"+i).html());
	$("button.bi"+i).click( () => {
	    $(".NASA"+i).html($("#nasaRSS-content"+i).html());
	});
	$("button.ci"+i).click( () => {
	    $(".NASA"+i).html($("#nasaRSS-item"+i).html());
	});
	
    }
});
</script>
