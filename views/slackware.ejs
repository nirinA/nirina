<div id="maindisplay">
<h1>Slackware Linux</h1>
    <div id="allChangeLog" style="display:none;">
    <h3><%= data.title %></h3>
    <!-- <h2><%= data.description %></h2> -->
<% for(var i=0; i < data.items.length; i++) { %>
   <div><%- data.items[i].content %></div>
   <hr>
<% } %>
    </div>
    <div id="ChangeLogSummary" style="display:none;">
    <h3>Latest ChangeLog</h3>
    <%- data.items[0].content %>
    </div>
    <div id="slackware">
    </div>
    <div>
    <p><button class="showChangeLog">see all ChangeLog</button></p>
    <p>go to : <a href="https://slackware.com">https://slackware.com</a></p>
    </div>
    <script>
    //$("#allChangeLog").hide();
    $("#slackware").html($("#ChangeLogSummary").html());
    $(".showChangeLog").click( () => {
        if ($(".showChangeLog").html() === "see all ChangeLog") {
	    $(".showChangeLog").html("last ChangeLog");
	    $("#slackware").html($("#allChangeLog").html());
	} else {
	    $(".showChangeLog").html("see all ChangeLog");
	    $("#slackware").html($("#ChangeLogSummary").html());
	}
    });
   </script>
</div>
